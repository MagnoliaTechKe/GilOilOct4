<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="hr_payroll_report_inherit_customization" inherit_id="hr_payroll.report_payslip">
        <xpath expr="//table[@id='employee_info_table_1']" position="replace">
        <table name="employee-infos" id="employee_info_table_1" class="table table-sm table-bordered" style="width: 100%; font-size: 12px;">
            <tr>
                <td><strong>Name:</strong> <t t-field="o.employee_id"/></td>
                <td><strong>Department:</strong> <t t-field="o.employee_id.department_id.name"/></td>
            </tr>
            <tr>
                <td><strong>Employee No:</strong> <t t-field="o.employee_id.employee_number"/></td>
                <td><strong>Bank Name:</strong> <t t-field="o.employee_id.bank_account_id.bank_id.name"/></td>
            </tr>
            <tr>
                <td><strong>PIN:</strong> <t t-field="o.employee_id.pin"/></td>
                <td><strong>Bank Branch:</strong> </td>
            </tr>
            <tr>
                <td><strong>NSSF:</strong> </td>
                <td><strong>Bank A/C No:</strong> <t t-field="o.employee_id.bank_account_id.acc_number"/></td>
            </tr>
        </table>
    </xpath>

    </template>
</odoo>
